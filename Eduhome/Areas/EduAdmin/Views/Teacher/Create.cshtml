@model Teachers
@{
    ViewData["Title"] = "Create";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Teacher</h4>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Name">Teacher Name</label>
                    <input asp-for="@Model.Name" class="form-control" placeholder="Name">
                    <span class="text-danger" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Position">Teacher Position</label>
                    <input asp-for="@Model.Position" class="form-control" placeholder="Position">
                    <span class="text-danger" asp-validation-for="@Model.Position"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.TeacherDetails.Description">Teacher About</label>
                    <input asp-for="@Model.TeacherDetails.Description" class="form-control" placeholder="About">
                    <span class="text-danger" asp-validation-for="@Model.TeacherDetails.Description"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.TeacherDetails.Degree">Teacher Degree</label>
                    <input asp-for="@Model.TeacherDetails.Degree" class="form-control" placeholder="Degree">
                    <span class="text-danger" asp-validation-for="@Model.TeacherDetails.Degree"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.TeacherDetails.Experience">Teacher Experience</label>
                    <input asp-for="@Model.TeacherDetails.Experience" class="form-control" placeholder="Experience">
                    <span class="text-danger" asp-validation-for="@Model.TeacherDetails.Experience"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.TeacherDetails.Hobbies">Teacher Hobbies</label>
                    <input asp-for="@Model.TeacherDetails.Hobbies" class="form-control" placeholder="Hobbies">
                    <span class="text-danger" asp-validation-for="@Model.TeacherDetails.Hobbies"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.TeacherDetails.Faculty">Faculty</label>
                    <input asp-for="@Model.TeacherDetails.Faculty" class="form-control" placeholder="Faculty">
                    <span class="text-danger" asp-validation-for="@Model.TeacherDetails.Faculty"></span>
                </div>
                @*<div class="form-group">

                        @foreach (Tags t in Model.Tags)
                        {
                            <label asp-for="@Model.Tags.ElementAt(0).Title">Tags</label>
                            <input asp-for="@Model.Tags.ElementAt(0).Title" class="form-control" placeholder="Tag Name">
                            count++;
                        }
                        <span class="text-danger" asp-validation-for="@Model.Tags.ElementAt(0).Title"></span>
                    </div>*@
                <div class="form-group">
                    <label asp-for="@Model.Photo"></label>
                    <input asp-for="@Model.Photo" class="form-control" placeholder="Select Photo">
                    <span class="text-danger" asp-validation-for="@Model.Photo"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_Validation" />
}

