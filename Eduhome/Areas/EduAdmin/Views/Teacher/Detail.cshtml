@model Teachers
@{
    ViewData["Title"] = "Detail";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="col-lg-12">
                <img src="~/assets/img/teacher/@Model.Image" width="400" />
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Teacher Name: @Model.Name</h4>
                    <h4 class="card-title">Teacher Position: @Model.Position</h4>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">About Teacher:  @Model.TeacherDetails.Description</h4>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Degree: @Model.TeacherDetails.Degree</h4>
                    <h4 class="card-title"> Experience: @Model.TeacherDetails.Experience</h4>
                    <h4 class="card-title"> Hobbies: @Model.TeacherDetails.Hobbies</h4>
                    <h4 class="card-title"> Faculty: @Model.TeacherDetails.Faculty</h4>
                </div>
            </div>
        </div>
    </div>

</div>
<a asp-action="Index" class="btn btn-secondary">Go Back</a>


