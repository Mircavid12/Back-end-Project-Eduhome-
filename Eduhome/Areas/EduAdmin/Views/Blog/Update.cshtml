@model Blogs
@{
    ViewData["Title"] = "Update";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Course</h4>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                
                <div class="form-group">
                    <label asp-for="@Model.Description">Blog Description</label>
                    <input asp-for="@Model.Description" class="form-control" placeholder="Description">
                    <span class="text-danger" asp-validation-for="@Model.Description"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.BlogDetails.Description1">Description 1</label>
                    <input asp-for="@Model.BlogDetails.Description1" class="form-control" placeholder="Description1">
                    <span class="text-danger" asp-validation-for="@Model.BlogDetails.Description1"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.BlogDetails.Description2">Description 2</label>
                    <input asp-for="@Model.BlogDetails.Description2" class="form-control" placeholder="Description2">
                    <span class="text-danger" asp-validation-for="@Model.BlogDetails.Description2"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.BlogDetails.Description3">Description 3</label>
                    <input asp-for="@Model.BlogDetails.Description3" class="form-control" placeholder="Description3">
                    <span class="text-danger" asp-validation-for="@Model.BlogDetails.Description3"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Photo"></label>
                    <input asp-for="@Model.Photo" class="form-control" placeholder="Select Photo">
                    <span class="text-danger" asp-validation-for="@Model.Photo"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Update</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_Validation" />

}


