@model Courses
@{
    ViewData["Title"] = "Create";
    int count = 0;
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Course</h4>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Title">Course Title</label>
                    <input asp-for="@Model.Title" class="form-control" placeholder="Title">
                    <span class="text-danger" asp-validation-for="@Model.Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description">Course Description</label>
                    <input asp-for="@Model.Description" class="form-control" placeholder="Description">
                    <span class="text-danger" asp-validation-for="@Model.Description"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.CourseFeatures.About">About</label>
                    <input asp-for="@Model.CourseFeatures.About" class="form-control" placeholder="About">
                    <span class="text-danger" asp-validation-for="@Model.CourseFeatures.About"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.CourseFeatures.Apply">How to Apply</label>
                    <input asp-for="@Model.CourseFeatures.Apply" class="form-control" placeholder="How to Apply">
                    <span class="text-danger" asp-validation-for="@Model.CourseFeatures.Apply"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.CourseFeatures.Certification">Certification</label>
                    <input asp-for="@Model.CourseFeatures.Certification" class="form-control" placeholder="Certification">
                    <span class="text-danger" asp-validation-for="@Model.CourseFeatures.Certification"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.CourseFeatures.Start">Start</label>
                    <input asp-for="@Model.CourseFeatures.Start" class="form-control" placeholder="Start">
                    <span class="text-danger" asp-validation-for="@Model.CourseFeatures.Start"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.CourseFeatures.Duration">Duration</label>
                    <input asp-for="@Model.CourseFeatures.Duration" class="form-control" placeholder="Duration">
                    <span class="text-danger" asp-validation-for="@Model.CourseFeatures.Duration"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.CourseFeatures.ClassDuration">ClassDuration</label>
                    <input asp-for="@Model.CourseFeatures.ClassDuration" class="form-control" placeholder="ClassDuration">
                    <span class="text-danger" asp-validation-for="@Model.CourseFeatures.ClassDuration"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.CourseFeatures.Level">Level</label>
                    <input asp-for="@Model.CourseFeatures.Level" class="form-control" placeholder="Level">
                    <span class="text-danger" asp-validation-for="@Model.CourseFeatures.Level"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.CourseFeatures.Language">Language</label>
                    <input asp-for="@Model.CourseFeatures.Language" class="form-control" placeholder="Language">
                    <span class="text-danger" asp-validation-for="@Model.CourseFeatures.Language"></span>
                </div>
                <div class="form-group d-inline-block">
                    <label asp-for="@Model.CourseFeatures.StudentsCount">StudentsCount</label>
                    <input asp-for="@Model.CourseFeatures.StudentsCount" class="form-control" placeholder="StudentsCount">
                    <span class="text-danger" asp-validation-for="@Model.CourseFeatures.StudentsCount"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CourseFeatures.Assestments">Assestments</label>
                    <input asp-for="@Model.CourseFeatures.Assestments" class="form-control" placeholder="Assestments">
                    <span class="text-danger" asp-validation-for="@Model.CourseFeatures.Assestments"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CourseFeatures.CourseFee">CourseFee</label>
                    <input asp-for="@Model.CourseFeatures.CourseFee" class="form-control" placeholder="CourseFee">
                    <span class="text-danger" asp-validation-for="@Model.CourseFeatures.CourseFee"></span>
                </div>
                <div class="form-group">

                    @foreach (Tags t in Model.Tags)
                    {
                        <label asp-for="@Model.Tags.ElementAt(count).Title">Tags</label>
                        <input asp-for="@Model.Tags.ElementAt(count).Title" class="form-control" placeholder="Tag Name">
                        count++;
                    }
                    <span class="text-danger" asp-validation-for="@Model.Tags.ElementAt(0).Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Photo"></label>
                    <input asp-for="@Model.Photo" class="form-control" placeholder="Select Photo">
                    <span class="text-danger" asp-validation-for="@Model.Photo"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_Validation" />
}

