@model AboutVM
@{
    ViewData["Title"] = "Index";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>about us</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- About Start -->
<div class="about-area pt-145 pb-155">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>@Html.Raw(Model.AboutIntro.Title)</h2>
                    <p>@Model.AboutIntro.Description1</p>
                    <p class="hidden-sm">@Model.AboutIntro.Description2</p>
                    <a class="default-btn" asp-controller="Course" asp-action="Index">view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="~/assets/img/about/@Model.AboutIntro.Image" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Teacher Start -->
<div class="teacher-area pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/assets/img/icon/section.png" alt="title">
                    <h2>meet our teachers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Teachers teacher in Model.Teachers.Take(4))
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher">
                        <div class="single-teacher-img">
                            <a asp-controller="Teacher" asp-action="TeacherDetail" asp-route-id="@teacher.id"><img src="~/assets/img/teacher/@teacher.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a asp-controller="Teacher" asp-action="TeacherDetail" asp-route-id="@teacher.id">@teacher.Name</a></h2>
                            <h4>@teacher.Position</h4>
                            <ul>
                                @foreach (TeacherBios tb in teacher.TeacherBios.Take(1))
                                {
                                    
                                        <li><a href="@tb"><i class="zmdi zmdi-facebook"></i></a></li>
                                    
                                        <li><a href="@tb"><i class="zmdi zmdi-pinterest"></i></a></li>
                                    
                                        <li><a href="@tb"><i class="zmdi zmdi-vimeo"></i></a></li>
                                    
                                        <li><a href="@tb"><i class="zmdi zmdi-twitter"></i></a></li>
                                    
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                <div class="col-md-8 col-md-offset-2 col-sm-12">
                    <div class="single-testimonial">
                        <div class="testimonial-info">
                            <div class="testimonial-img">
                                <img src="~/assets/img/testimonial/@Model.Testimonials.Image" alt="testimonial">
                            </div>
                            <div class="testimonial-content">
                                <p>@Model.Testimonials.Description</p>
                                <h4>@Model.Testimonials.Name</h4>
                                <h5>@Model.Testimonials.Position</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Notice Start -->
<section class="notice-area two pt-140 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right-wrapper mb-25 pb-25">
                    <h3>TAKE A VIDEO TOUR</h3>
                    <div class="notice-video">
                        <div class="video-icon video-hover">
                            <a class="video-popup" href="@Model.AboutVideo.Video">
                                <i class="zmdi zmdi-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>notice board</h3>
                    <div class="notice-left">
                        @foreach (NoticeBoards nb in Model.NoticeBoards.Take(6))
                        {
                            <div class="single-notice-left mb-23 pb-20">
                                <h4>@nb.NoticeTime</h4>
                                <p>@nb.Description </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
