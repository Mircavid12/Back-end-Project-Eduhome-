@model List<Courses>
@{
    ViewData["Title"] = "Index";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>courses</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form method="get" asp-action="Index">
                        <input type="search" placeholder="Search..." value="@ViewData["GetCourses"]" name="searchString" />
                        <button type="submit">search</button>

                    </form>
                    <a asp-controller="Course" asp-action="Index" class="btn btn-primary">Get back</a>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Courses c in Model)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-course mb-70">
                        <div class="course-img">
                            <a asp-controller="Course" asp-action="CourseDetail" asp-route-id="@c.id">
                                <img src="~/assets/img/course/@c.Image" alt="course">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            <h3><a href="course-details.html">@c.Title</a></h3>
                            <p>@c.Description</p>
                            <a class="default-btn" href="course-details.html">read more</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row text-center">
            <nav aria-label="...">
                <ul class="pagination pagination-lg">
                    @for (int i = 1; i <= ViewBag.PageCount; i++)
                    {
                        if (i == ViewBag.page)
                        {
                            <li class="page-item active" aria-current="page">
                                <span class="page-link">@i</span>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" asp-controller="Course"
                                   asp-action="Index"
                                   asp-route-page="@i">@i</a>
                            </li>
                        }

                    }
                </ul>
            </nav>
        </div>
    </div>
</div>
<!-- Course End -->
