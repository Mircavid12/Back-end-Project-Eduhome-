                                <li><a href="~/assets/#">TimeTable</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-6 col-xs-12">
                        <div class="single-widget">
                            <h3>useful links</h3>
                            <ul>
                                <li><a href="~/assets/course.html">our courses</a></li>
                                <li><a href="~/assets/about.html">about us</a></li>
