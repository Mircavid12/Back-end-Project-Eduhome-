                                    <li><a href="~/assets/#"><i class="zmdi zmdi-twitter"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="single-widget">
                            <h3>information</h3>
                            <ul>
                                <li><a href="~/assets/#">addmission</a></li>
                                <li><a href="~/assets/#">Academic Calender</a></li>
                                <li><a href="~/assets/event.html">Event List</a></li>
