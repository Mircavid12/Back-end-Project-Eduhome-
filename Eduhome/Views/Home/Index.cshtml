<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Eduhome - Educational HTML Template</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="~/assets/apple-touch-icon.png">
    <!-- Place favicon.ico in the root directory -->

    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/animate.css">
    <link rel="stylesheet" href="~/assets/css/meanmenu.css">
    <link rel="stylesheet" href="~/assets/css/magnific-popup.css">
    <link rel="stylesheet" href="~/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/css/et-line-icon.css">
    <link rel="stylesheet" href="~/assets/css/reset.css">
    <link rel="stylesheet" href="~/assets/css/ionicons.min.css">
    <link rel="stylesheet" href="~/assets/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/responsive.css">
    <script src="~/assets/js/vendor/modernizr-2.8.3.min.js"></script>
</head>
<body>
    <!-- Header Area Start -->
    <header class="top">
        <div class="header-area header-sticky fixed">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-sm-3 col-xs-6">
                        <div class="logo">
                            <a href="~/assets/index.html"><img src="~/assets/img/logo/logo.png" alt="eduhome" /></a>
                        </div>
                    </div>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        <div class="content-wrapper one">
                            <!-- Main Menu Start -->
                            <div class="main-menu one text-right">
                                <nav>
                                    <ul>
                                        <li>
                                            <a asp-controller="Home" asp-action="Index">Home</a>
                                        </li>
                                        <li><a asp-controller="About" asp-action="Index">About</a></li>
                                        <li>
                                            <a asp-controller="Course" asp-action="Index">courses</a>
                                        </li>
                                        <li>
                                            <a asp-controller="Event" asp-action="Index">event</a>
                                        </li>
                                        <li class="hidden-sm">
                                            <a asp-controller="Teacher" asp-action="Index">teacher</a>
                                        </li>
                                        <li>
                                            <a asp-controller="Blog" asp-action="Index">blog</a>
                                        </li>
                                        <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                                    </ul>
                                </nav>
                            </div>
                            <div class="mobile-menu hidden-lg hidden-md one"></div>
                            <!-- Main Menu End -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Header Area End -->
    <!-- Background Area Start -->
    <section id="slider-container" class="slider-area">
        <div class="slider-owl owl-theme owl-carousel">
            @foreach (Sliders s in Model.Sliders)
            {
                <!-- Start Slingle Slide -->
                <div class="single-slide item" style="background-image: url(assets/img/slider/@s.Image)">
                    <!-- Start Slider Content -->
                    <div class="slider-content-area">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-7 col-md-offset-left-5">
                                    <div class="slide-content-wrapper">
                                        <div class="slide-content">
                                            <h3>@s.Title1</h3>
                                            <h2>@s.Title2 </h2>
                                            <p>@s.Description  </p>
                                            <a class="default-btn" href="~/assets/about.html">Learn more</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Start Slider Content -->
                </div>
                <!-- End Slingle Slide -->
            }
        </div>
    </section>
    <!-- Background Area End -->
    <!-- Notice Start -->
    <section class="notice-area pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="notice-left">
                        <h3>notice board</h3>
                        @foreach (NoticeBoards nb in Model.NoticeBoards)
                        {
                            <div class="single-notice-left mb-25 pb-25">
                                <h4>@nb.NoticeTime</h4>
                                <p>@nb.Description </p>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="notice-right">
                        @foreach (SingleNoticeRight snr in Model.SingleNoticeRights)
                        {
                            <div class="single-notice-right mb-25 pb-25">
                                <h3>@snr.Title</h3>
                                <p>@snr.Description </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Notice End -->
    <!-- Choose Start -->
    <section class="choose-area pb-85 pt-77">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-left-4 col-sm-8 col-md-offset-left-4">
                    <div class="choose-content text-left">
                        <h2>@Model.Chooses.Title</h2>
                        <p>@Model.Chooses.Description1 </p>
                        <p class="choose-option">@Model.Chooses.Description2 </p>
                        <a class="default-btn" asp-controller="Course" asp-action="Index">view courses</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Choose Area End -->
    <!-- Courses Area Start -->
    <div class="courses-area pt-150 text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="section-title">
                        <img src="~/assets/img/icon/section.png" alt="section-title">
                        <h2>COURSES WE OFFER</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (Courses c in Model.Courses.Take(3))
                {
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="single-course">
                            <div class="course-img">
                                <a asp-controller="Course" asp-action="CourseDetail" asp-route-id="@c.id">
                                    <img src="~/assets/img/course/@c.Image" alt="course">
                                    <div class="course-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="course-content">
                                <h3><a asp-controller="Course" asp-action="CourseDetail" asp-route-id="@c.id">@c.Title</a></h3>
                                <p>@c.Description</p>
                                <a class="default-btn" asp-controller="Course" asp-action="CourseDetail" asp-route-id="@c.id">read more</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Courses Area End -->
    <!-- Event Area Start -->
    <div class="event-area one text-center pt-140 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="section-title">
                        <img src="~/assets/img/icon/section.png" alt="section-title">
                        <h2>UPCOMMING EVENTS</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    @foreach (Events e1 in Model.Events.Take(4))
                    {
                        <div class="single-event mb-35">
                            <div class="event-date">
                                <h3><a asp-controller="Event" asp-action="EventDetail" asp-route-id="@e1.id">@e1.Day <span>@e1.Month</span></a></h3>
                            </div>
                            <div class="event-content text-left">
                                <div class="event-content-left">
                                    <h4><a asp-controller="Event" asp-action="EventDetail" asp-route-id="@e1.id">@e1.Title</a></h4>
                                    <ul>
                                        <li><i class="fa fa-clock-o"></i>@e1.StartTime - @e1.EndTime</li>
                                        <li><i class="fa fa-map-marker"></i>@e1.Venue</li>
                                    </ul>
                                </div>
                                <div class="event-content-right">
                                    <a class="default-btn" asp-controller="Event" asp-action="EventDetail" asp-route-id="@e1.id">join now</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-6 hidden-sm hidden-xs">
                    @foreach (Events e2 in Model.Events.Skip(4).Take(4))
                    {
                        <div class="single-event mb-35">
                            <div class="event-date">
                                <h3><a asp-controller="Event" asp-action="EventDetail" asp-route-id="@e2.id">@e2.Day <span>@e2.Month</span></a></h3>
                            </div>
                            <div class="event-content text-left">
                                <div class="event-content-left">
                                    <h4><a asp-controller="Event" asp-action="EventDetail" asp-route-id="@e2.id">@e2.Title</a></h4>
                                    <ul>
                                        <li><i class="fa fa-clock-o"></i>@e2.StartTime - @e2.EndTime</li>
                                        <li><i class="fa fa-map-marker"></i>@e2.Venue</li>
                                    </ul>
                                </div>
                                <div class="event-content-right">
                                    <a class="default-btn" asp-controller="Event" asp-action="EventDetail" asp-route-id="@e2.id">join now</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Event Area End -->
    <!-- Testimonial Area Start -->
    <div class="testimonial-area pt-110 pb-105 text-center">
        <div class="container">
            <div class="row">
                <div class="testimonial-owl owl-theme owl-carousel">
                    <div class="col-md-8 col-md-offset-2 col-sm-12">
                        <div class="single-testimonial">
                            <div class="testimonial-info">
                                <div class="testimonial-img">
                                    <img src="~/assets/img/testimonial/@Model.Testimonials.Image" alt="testimonial">
                                </div>
                                <div class="testimonial-content">
                                    <p>@Model.Testimonials.Description</p>
                                    <h4>@Model.Testimonials.Name</h4>
                                    <h5>@Model.Testimonials.Position</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Testimonial Area End -->
    <!-- Blog Area Start -->
    <div class="blog-area pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="section-title text-center">
                        <img src="~/assets/img/icon/section.png" alt="section-title">
                        <h2>LATEST FROM BLOG</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (Blogs b in Model.Blogs.Take(3))
                {
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="single-blog">
                            <div class="blog-img">
                                <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@b.id"><img src="~/assets/img/blog/@b.Image" alt="blog"></a>
                                <div class="blog-hover">
                                    <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@b.id"><i class="fa fa-link"></i></a>
                                </div>
                            </div>
                            <div class="blog-content">
                                <div class="blog-top">
                                    <p>@Html.Raw(b.Info)</p>
                                </div>
                                <div class="blog-bottom">
                                    <h2><a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@b.id">@b.Description </a></h2>
                                    <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@b.id">read more</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Blog Area End -->
    <!-- Subscribe Start -->
    <div class="subscribe-area pt-60 pb-70">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="subscribe-content section-title text-center">
                        <h2>subscribe our newsletter</h2>
                        <p>I must explain to you how all this mistaken idea </p>
                    </div>
                    <div class="newsletter-form mc_embed_signup">
                        <form action="http://devitems.us11.list-manage.com/subscribe/post?u=6bbb9b6f5827bd842d9640c82&amp;id=05d85f18ef" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                            <div id="mc_embed_signup_scroll" class="mc-form">
                                <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="Enter your e-mail address" required>
                                <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                <div class="mc-news" aria-hidden="true"><input type="text" name="b_6bbb9b6f5827bd842d9640c82_05d85f18ef" tabindex="-1" value=""></div>
                                <button id="mc-embedded-subscribe" class="default-btn" type="submit" name="subscribe"><span>subscribe</span></button>
                            </div>
                        </form>
                        <!-- mailchimp-alerts Start -->
                        <div class="mailchimp-alerts">
                            <div class="mailchimp-submitting"></div><!-- mailchimp-submitting end -->
