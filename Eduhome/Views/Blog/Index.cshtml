@model List<Blogs>
@{
    ViewData["Title"] = "Index";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>blog</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            @foreach (Blogs b in Model)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-blog mb-60">
                        <div class="blog-img">
                            <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@b.id"><img src="~/assets/img/blog/@b.Image" alt="blog"></a>
                            <div class="blog-hover">
                                <i class="fa fa-link"></i>
                            </div>
                        </div>
                        <div class="blog-content">
                            <div class="blog-top">
                                <p>@b.Info <i class="fa fa-comments-o"></i> 4</p>
                            </div>
                            <div class="blog-bottom">
                                <h2><a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@b.id">@b.Description </a></h2>
                                <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@b.id">read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row text-center">
            <nav aria-label="...">
                <ul class="pagination pagination-lg">
                    @for (int i = 1; i <= ViewBag.PageCount; i++)
                    {
                        if (i == ViewBag.page)
                        {
                            <li class="page-item active" aria-current="page">
                                <span class="page-link">@i</span>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" asp-controller="Blog"
                                   asp-action="Index"
                                   asp-route-page="@i">@i</a>
                            </li>
                        }

                    }
                </ul>
            </nav>
        </div>
    </div>
</div>
<!-- Blog End -->
