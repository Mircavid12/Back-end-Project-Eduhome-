@model List<Teachers>
@{
    ViewData["Title"] = "Index";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title ml-auto">
                    <h3>search teachers</h3>
                </div>
                <div class="course-form">
                    <form method="get" asp-action="Index">
                        <input type="search" placeholder="Search..." value="@ViewData["GetTeachers"]" name="searchString" />
                        <button type="submit">search</button>
                        <a asp-controller="Teacher" asp-action="Index" class="btn btn-primary mt-1">Go back</a>
                    </form>

                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Teachers t in Model)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher mb-45">
                        <div class="single-teacher-img">
                            <a asp-controller="Teacher" asp-action="TeacherDetail" asp-route-id="@t.id"><img src="~/assets/img/teacher/@t.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a asp-controller="Teacher" asp-action="TeacherDetail" asp-route-id="@t.id">@t.Name</a></h2>
                            <h4>@t.Position</h4>
                            <ul>
                                    <li><a href="@t.TeacherBios.ElementAt(0).Name"><i class="zmdi zmdi-facebook"></i></a></li>
                                    <li><a href="@t.TeacherBios.ElementAt(1).Name"><i class="zmdi zmdi-pinterest"></i></a></li>
                                    <li><a href="@t.TeacherBios.ElementAt(2).Name"><i class="zmdi zmdi-vimeo"></i></a></li>
                                    <li><a href="@t.TeacherBios.ElementAt(3).Name"><i class="zmdi zmdi-twitter"></i></a></li>
                                
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row text-center">
            <nav aria-label="...">
                <ul class="pagination pagination-lg">
                    @for (int i = 1; i <= ViewBag.PageCount; i++)
                    {
                        if (i == ViewBag.page)
                        {
                            <li class="page-item active" aria-current="page">
                                <span class="page-link">@i</span>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" asp-controller="Teacher"
                                   asp-action="Index"
                                   asp-route-page="@i">@i</a>
                            </li>
                        }

                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Teacher End -->
